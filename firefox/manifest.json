{
	"manifest_version": 2,
	"name": "LinkPop",
	"version": "1.0.0",
	"description": "Pop up any link.",
	"permissions": ["contextMenus", "tabs"],
	"background": {
		"scripts": [
			"background.js"
		]
	},
	"browser_action": {
		"default_icon": {
			"16": "icons/icon-16x16.png",
			"32": "icons/icon-32x32.png"
		}
	}
}